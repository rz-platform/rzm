# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
trim_trailing_whitespace = true
max_line_length = 120

[*.js]
insert_final_newline = true
indent_size = 4


[*.{html, scss}]
insert_final_newline = true
indent_size = 2
